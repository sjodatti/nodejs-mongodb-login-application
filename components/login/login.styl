@keyframes shake
	0%    {margin-left: 0px;} 
	25%    {margin-left: 50px;}
	75%    {margin-left: -50px;}
	100%    {margin-left: 0px;}

.shake
	-webkit-animation-name: shake; 
	animation-name: shake;
	animation-duration: 0.1s;
	animation-iteration-count: 2;
	input
		background-color:pink;

#login
	position: absolute
	top: 50%
	left: 50%
	transform: translate(-52%,-50%)
	padding: 50px
	border: 2px solid gray
	.inputfield
		margin: 20px

	

